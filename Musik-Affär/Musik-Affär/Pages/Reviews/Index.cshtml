@page
@model Musik_Affär.Pages.Reviews.IndexModel


@{
    ViewData["Title"] = "Index";
}

<h1>Mina Recensioner</h1>

<table class="table">
    <thead>
        <tr>
           <th>@Html.DisplayNameFor(model => model.Review[0].Product.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Review[0].Product.Category)</th>
            <th>@Html.DisplayNameFor(model => model.Review[0].Product.Color)</th>
            <th>@Html.DisplayNameFor(model => model.Review[0].Product.Brand)</th>
            <th>@Html.DisplayNameFor(model => model.Review[0].Grade)</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Review) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.Product)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
