@page
@model Musik_Affär.Pages.Reviews.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="val-text"></div>
            <input type="hidden" asp-for="Review.ID" />
            <div class="form-element">
                <label asp-for="Review.Grade" class="form-label"></label>
                <input asp-for="Review.Grade" class="form-control" />
                <span asp-validation-for="Review.Grade" class="val-text"></span>
            </div>
            <div class="form-element">
                <label asp-for="Review.UserID" class="form-label"></label>
                <select asp-for="Review.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="Review.UserID" class="val-text"></span>
            </div>
            <div class="form-element">
                <input type="submit" value="Save" class="submit-btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
