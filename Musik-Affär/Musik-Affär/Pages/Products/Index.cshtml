@page
@model Musik_Affär.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Produktlista</h1>
<form method="get">
    <table>
        <tbody>
            <tr>
                <th><label for="SearchTerm">Sök</label></th>
                <td><input type="search" name="SearchTerm" id="SearchTerm" value="@Model.SearchTerm" placeholder="Vad letar du efter?"></td>
            </tr>
            <tr>
                <th><label for="SortColumn">Sort by</label></th>
                <td>
                    <select asp-for="SortColumn" asp-items="Model.SortColumnList">
                        <option value="">Välj Filter</option>
                    </select>
                    <select asp-for="Direction" asp-items="Model.DirectionList">
                         <option value="">Välj Ordning</option>
                    </select>
                </td>
            </tr>
        </tbody>
    </table>
    <button type="submit">Search</button>
</form>
<p>
    <a asp-page="Create">Skapa Ny</a>
</p>
<table class="table" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Brand)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Products[0].Score)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Products) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Score)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Ändra</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Detaljer</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Ta Bort</a>
            </td>
        </tr>
}
    </tbody>
</table>
